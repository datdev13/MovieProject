@model Models.EF.Movie

@{
    ViewBag.Title = "MovieDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var category = (Models.EF.Category)ViewBag.category;
    var ListMovieRelated = (List<Models.EF.Movie>)ViewBag.ListMovieRelated;
    var ListMovieNew1 = (List<Models.EF.Movie>)ViewBag.ListMovieNew1;
    var movie = (Models.EF.Movie)ViewBag.movie;
}



<div class="container">

    <!-- 🎬 HEADER -->
    <div class="movie-header" style="background-image: url('@movie.Image')">
        <div class="movie-header-overlay"></div>

        <div class="movie-header-content">
            <div class="movie-title">@movie.Name</div>

            <button class="movie-btn" onclick="scrollToVideo()">
                ▶ Xem ngay
            </button>

            @if (ViewBag.CanWatchFullMovie == true)
            {
                <a href="@movie.MovieLink" class="movie-btn-secondary">⬇ Tải xuống</a>
            }
            else
            {
                <a href="/Payment/Buy/@movie.MovieID" class="movie-btn-secondary">💳 Thanh toán để xem</a>
            }
        </div>
    </div>


    <!-- 🎥 VIDEO PLAYER -->
    <div id="movieVideo" class="video-container">
        @if (ViewBag.CanWatchFullMovie == true)
        {
            <video src="@movie.MovieLink" controls autoplay width="900" height="500"></video>
        }
        else
        {
            <iframe width="900" height="500"
                    src="@movie.TrailerLink"
                    frameborder="0"
                    allow="autoplay; encrypted-media"
                    allowfullscreen>
            </iframe>

            <div class="alert alert-warning" style="margin-top:15px; font-size:18px;">
                <strong>Bạn chưa thanh toán!</strong> Bạn chỉ xem được trailer.
                <a href="/Payment/Buy/@movie.MovieID" class="btn btn-success btn-sm">Thanh toán ngay</a>
            </div>
        }
    </div>


    <!-- 📄 MÔ TẢ -->
    <div class="section-title">Nội dung phim</div>
    <div style="font-size:18px; line-height:1.6; margin-bottom:20px; color:#333;">
        @Html.Raw(Model.Description)
    </div>


    <!-- 🎞 PHIM LIÊN QUAN -->
    <div class="section-title">Phim liên quan</div>

    <div class="row">
        @foreach (var plq in ListMovieRelated)
        {
            <div class="col-md-4 related-item">
                <a href="/phim/@plq.MovieID">
                    <img src="@plq.Image" />
                </a>
                <a href="/phim/@plq.MovieID" class="related-title">@plq.Name</a>
                <p style="color:#555">👁 @plq.Viewed views</p>
            </div>
        }
    </div>


    <!-- 🆕 PHIM MỚI -->
    <div class="carousel-title">Phim mới cập nhật</div>
    <div id="owl-demo" class="owl-carousel owl-theme">
        @foreach (var pm in ListMovieNew1)
        {
            <div class="item">
                <div class="w3l-movie-gride-agile w3l-movie-gride-agile1">
                    <a href="/phim/@pm.MovieID">
                        <img src="@pm.Image" class="img-responsive" />
                        <div class="w3l-action-icon"><i class="fa fa-play-circle"></i></div>
                    </a>
                    <div class="mid-1 agileits_w3layouts_mid_1_home">
                        <h6>@pm.Name</h6>
                        <p>@pm.Year • ⭐ @pm.Rate</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function scrollToVideo() {
        document.getElementById("movieVideo").scrollIntoView({ behavior: "smooth" });
    }
</script>

