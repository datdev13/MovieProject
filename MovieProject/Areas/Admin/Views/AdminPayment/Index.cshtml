@model IEnumerable<Models.EF.Payment>

<h2>Danh sách thanh toán</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>UserID</th>
            <th>MovieID</th>
            <th>Gói</th>
            <th>Số tiền</th>
            <th>Ngày</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.UserID</td>
                <td>@p.MovieID</td>
                <td>@p.Package</td>
                <td>@p.Amount</td>
                <td>@p.PaymentDate</td>
                <td>@p.Status</td>
                <td>
                    @if (p.Status == "Pending")
                    {
                        <a href="/Admin/AdminPayment/Approve/@p.PaymentID" class="btn btn-success btn-sm">Duyệt</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
