@model IEnumerable<Models.EF.Payment>
@{
    ViewBag.Title = "Quản Lý Thanh Toán";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Danh Sách Thanh Toán</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Người dùng</th>
            <th>Gói cước</th>
            <th>Số tiền</th>
            <th>Ngày thanh toán</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.User.Name</td>
                
                <td>@p.Package</td>
                <td>@p.Amount.ToString("N0") đ</td>               
                <td>@p.PaymentDate</td>
                <td>
                    @if (p.Status == "Pending")
                    {
                        <a href="@Url.Action("Approve", "AdminPayment", new { area = "Admin", id = p.PaymentID })" class="btn btn-success btn-sm">Duyệt</a>
                    }
                    else
                    {
                        <span class="text-success">Đã duyệt</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
